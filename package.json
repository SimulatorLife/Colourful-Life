{
  "name": "code",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "type": "module",
  "imports": {
    "#tests/harness": "./test/testHarness.js"
  },
  "scripts": {
    "start": "parcel ./index.html",
    "clean": "node ./scripts/clean-parcel.mjs",
    "build": "parcel build ./index.html",
    "benchmark": "node scripts/profile-energy.mjs",
    "test": "node scripts/run-node-tests.mjs",
    "test:watch": "node scripts/run-node-tests.mjs --watch",
    "check": "npm run lint && npm run format:check && npm test",
    "format": "prettier --cache --cache-location .cache/prettier --write .",
    "format:check": "prettier --cache --cache-location .cache/prettier --check .",
    "format:workflows": "prettier --ignore-path .gitignore --write \".github/workflows/**/*.yml\"",
    "lint": "eslint . --cache --cache-location .cache/eslint --max-warnings=0",
    "lint:fix": "eslint . --fix --cache --cache-location .cache/eslint --max-warnings=0",
    "deploy:public": "./scripts/publish-public-build.sh",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/henrylkirk/Colourful-Life.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.18.0"
  },
  "bugs": {
    "url": "https://github.com/henrylkirk/Colourful-Life/issues"
  },
  "homepage": "https://github.com/henrylkirk/Colourful-Life#readme",
  "overrides": {
    "@swc/core": "1.14.0",
    "node-gyp-build-optional-packages": "5.2.2",
    "@eslint/eslintrc": {
      "globals": "16.4.0"
    },
    "@parcel/packager-js": {
      "globals": "16.4.0"
    }
  },
  "lint-staged": {
    "*.{cjs,js,mjs}": [
      "eslint --max-warnings=0 --fix",
      "prettier --write"
    ],
    "*.{css,html,md,json}": [
      "prettier --write"
    ],
    ".github/workflows/**/*.yml": [
      "prettier --ignore-path .gitignore --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "parcel": "^2.16.0",
    "prettier": "^3.6.2"
  }
}
